block content
	.navbar.navbar-expand-lg.bsnav.bsnav-overlay-light

		a.navbar-brand(href="#") bsnav

		button.navbar-toggler.toggler-spring
			span.navbar-toggler-icon


		.collapse.navbar-collapse.justify-content-md-end
			ul.navbar-nav.navbar-mobile.mr-0
				li.nav-item.nav-item-fill.active
					a.nav-link(href="#") Home
				li.nav-item.nav-item-fill
					a.nav-link(href="#") About Us
				li.nav-item.nav-item-fill
					a.nav-link(href="#") News
				li.nav-item.nav-item-fill
					a.nav-link(href="#") Gallery
				li.nav-item.nav-item-fill
					a.nav-link(href="#") Contact


	.jumbotron.jumbotron-fluid
		.container
			h1 Navbar overlay light


	.container
		script(src="https://gitlab.com/snippets/1718749.js")


	.bsnav-mobile
		.bsnav-mobile-overlay
		.navbar


	style.
		.jumbotron{
			background: url('https://picsum.photos/1400/700?image=823') no-repeat center top / cover;
			color: #fff;
			height: 600px;
			display: flex;
			align-items: center;
		}